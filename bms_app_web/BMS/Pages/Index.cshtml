@page
@model IndexModel
@{
    ViewData["Title"] = "Shared Memory Writer";
}

<h2>Write to Shared Memory</h2>

<form method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" id="Name" name="Name" class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label for="Mail">Mail</label>
        <input type="text" id="Mail" name="Mail" class="form-control" asp-for="Mail" />
    </div>
    <div class="form-group">
        <label for="SSN">SSN</label>
        <input type="text" id="SSN" name="SSN" class="form-control" asp-for="SSN" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@if (!string.IsNullOrEmpty(Model.ResponseMessage))
{
    <div class="alert alert-info mt-3">
        @Model.ResponseMessage
    </div>
}